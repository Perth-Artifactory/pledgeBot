{
    "display_information": {
        "name": "Pledge Bot",
        "description": "Interactions with the pledge system",
        "background_color": "#141414"
    },
    "features": {
        "app_home": {
            "home_tab_enabled": true,
            "messages_tab_enabled": false,
            "messages_tab_read_only_enabled": true
        },
        "bot_user": {
            "display_name": "Pledge Bot",
            "always_online": false
        }
    },
    "oauth_config": {
        "scopes": {
            "user": [
                "identity.basic"
            ],
            "bot": [
                "chat:write",
                "chat:write.public",
                "usergroups:read",
                "users.profile:read",
                "users:read",
                "users:read.email",
                "im:write",
                "mpim:write",
                "groups:write",
                "channels:write.invites"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "bot_events": [
                "app_home_opened"
            ]
        },
        "interactivity": {
            "is_enabled": true
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": true,
        "token_rotation_enabled": false
    }
}